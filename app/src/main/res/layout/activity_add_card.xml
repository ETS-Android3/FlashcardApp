<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardActivity">

    <EditText
        android:id="@+id/user_question"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Enter the question"
        android:layout_margin="20dp"
        android:inputType="textMultiLine"
        />

    <EditText
        android:id="@+id/user_answer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:layout_below="@id/user_question"
        android:hint="Enter the answer"
        android:inputType="textMultiLine"
        />

    <ImageView
        android:id="@+id/add_card_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_answer"
        android:layout_alignParentRight="true"
        android:layout_marginTop="300dp"
        android:src="@drawable/icon_cancel" />

    <ImageView
        android:id="@+id/save_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_answer"
        android:layout_marginTop="300dp"
        android:src="@drawable/icon_save" />

</RelativeLayout>