<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativePos"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="Who is the 44th president of the United States?"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Barack Obama"
        android:gravity="center"
        android:background="@color/teal_200"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/choice_bush"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="George Bush"
        android:layout_below="@id/flashcard_question"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="40sp"
        android:background="#f4cccc"
        />

    <TextView
        android:id="@+id/choice_obama"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="Barack Obama"
        android:layout_below="@id/choice_bush"
        android:gravity="center"
        android:textSize="40sp"
        android:background="#f4cccc"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/choice_trump"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:textSize="40sp"
        android:text="Donald Trump"
        android:layout_below="@id/choice_obama"
        android:background="#f4cccc"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/reset_but"
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choice_trump"
        android:layout_centerInParent="true"
        android:width="10dp"
        android:height="10dp"
        android:background="#158be3"
        android:layout_marginTop="10dp"/>


</RelativeLayout>